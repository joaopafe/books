{
  "openapi": "3.0.0",
  "info": {
    "title": "Book API",
    "description": "API for create, read, update and delete books to be performed",
    "contact": {
      "email": "joao.ea2020@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Test API"
    }
  ],
  "paths": {
    "/book": {
      "get": {
        "summary": "List all books registered",
        "description": "This route is responsible for list all book registered on the application",
        "tags": ["Book"],
        "responses": {
          "500": {
            "description": "Internal server error"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/book"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a book on the application",
        "description": "This route is responsible for create a book on the application",
        "tags": ["Book"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "createBook": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "author": {
                      "type": "string"
                    },
                    "publicationDate": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    }
                  }
                }
              },
              "examples": {
                "createBook": {
                  "value": {
                    "title": "A revolução dos bichos",
                    "author": "George Orwell",
                    "publicationDate": "17/08/1945",
                    "description": "Narra a insurreição dos animais de uma granja contra seus donos. Progressivamente, porém, a revolução degenera numa tirania ainda mais opressiva que a dos humanos.",
                    "image": ""
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Invalid book"
          },
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/book/{id}": {
      "get": {
        "summary": "List a book by id",
        "description": "This route is responsible for list a book by id",
        "tags": ["Book"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Book ID",
            "required": true
          }
        ],
        "responses": {
          "404": {
            "description": "Book not found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "title": {
                      "type": "string"
                    },
                    "author": {
                      "type": "string"
                    },
                    "publication_date": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update a specific book",
        "description": "This route is responsible for update a specific book by id",
        "tags": ["Book"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "updateBook": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "author": {
                      "type": "string"
                    },
                    "publicationDate": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    }
                  }
                }
              },
              "examples": {
                "createTask": {
                  "value": {
                    "title": "A revolução dos bichos",
                    "author": "George Orwell",
                    "publicationDate": "17/08/1945",
                    "description": "Narra a insurreição dos animais de uma granja contra seus donos. Progressivamente, porém, a revolução degenera numa tirania ainda mais opressiva que a dos humanos.",
                    "image": ""
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Book ID",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid book"
          },
          "404": {
            "description": "Book not found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Remove a specific book by id",
        "description": "This route is responsible for delete a specific book by id",
        "tags": ["Book"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Book ID",
            "required": true
          }
        ],
        "responses": {
          "404": {
            "description": "Task not found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "book": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "title": {
            "type": "string"
          },
          "publication_date": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "image": {
            "image": "string"
          }
        }
      }
    }
  }
}
